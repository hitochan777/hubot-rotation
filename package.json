{
  "name": "hubot-rocketchat-rotation",
  "version": "0.1.0",
  "author": "Otsuki Hitoshi <hitochan777@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "description": "A simple bot for role rotation such as a facilitator in morning meeting",
  "scripts": {
    "build": "rimraf .rpt2_cache && rollup -c",
    "test": "jest --no-cache",
    "format": "prettier --write src/**/*.{ts,tsx,js}"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "jest": "^22.4.3",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.57.1",
    "rollup-plugin-typescript2": "^0.12.0",
    "ts-jest": "^22.4.2",
    "typemoq": "^2.1.0",
    "typescript": "^2.8.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true,
        "tsConfigFile": "./tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec)\\.tsx?$",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ]
  },
  "prettier": {
    "semi": false
  }
}
