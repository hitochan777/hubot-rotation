{
  "name": "hubot-rotation",
  "version": "0.4.0",
  "author": "Otsuki Hitoshi <hitochan777@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "description": "A simple bot for role rotation such as a facilitator in morning meeting",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf .rpt2_cache && rollup -c",
    "test": "jest --no-cache",
    "format": "prettier --write src/**/*.{ts,tsx,js}",
    "prettier-check": "prettier --list-different src/**/*.{ts,tsx,js}"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "husky": "^1.0.0-rc.2",
    "jest": "^22.4.3",
    "prettier": "^1.11.1",
    "rimraf": "^2.6.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "enableTsDiagnostics": true,
        "tsConfigFile": "./tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec)\\.tsx?$",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/**/*.d.ts"
    ]
  },
  "prettier": {
    "semi": false
  },
  "dependencies": {
    "@types/node": "^9.6.6",
    "core-js": "^2.5.5",
    "rollup": "^0.58.2",
    "rollup-plugin-typescript2": "^0.13.0",
    "ts-jest": "^22.4.4",
    "typescript": "^2.8.3"
  }
}
